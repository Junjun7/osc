<configuration scan="true">
    <!--定义变量-->
    <property name="APP_NAME" value="osc"/>
    <timestamp key="TIMESTAMP" datePattern="yyyy-MM-dd"/>

    <!-- 输出到控制台 -->
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
